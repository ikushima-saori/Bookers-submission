<div><%= flash[:notice] %></div>

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <% if @book.errors.count == 1 %>
    <p>1 error prohibited this book from being saved:</p>
  <% else %>
    <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
  <% end %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<p><%= link_to "Show", book_path(@book.id) %></p>
<p><%= link_to "Back", books_path %></p>